---
import BaseLayout from "../layouts/BaseLayout.astro";
import BaseCard from "../components/BaseCard.astro";
---

<BaseLayout title="Home">
  <BaseCard title="Home">
    <div class="hero-section">
      <div class="hero-content">
        <div class="greeting">
          <h1 class="hero-title">
            Avnish Singh â€” Cybersecurity Student & Ethical Hacker
          </h1>
          <p class="hero-subtitle">
            Specializing in Penetration Testing, Network Security & Digital Forensics
          </p>
        </div>
        
        <div class="hero-stats">
          <div class="stat-card">
            <div class="stat-number">100+</div>
            <div class="stat-label">Vulnerabilities Found</div>
          </div>
          <div class="stat-card">
            <div class="stat-number">50+</div>
            <div class="stat-label">Security Tools</div>
          </div>
          <div class="stat-card">
            <div class="stat-number">24/7</div>
            <div class="stat-label">Learning Mode</div>
          </div>
        </div>
      </div>
    </div>
  </BaseCard>

  <BaseCard>
    <div class="about-section">
      <h2 class="section-title">About Me</h2>
      <div class="about-grid">
        <div class="about-content">
          <p class="about-text">
            I'm a passionate cybersecurity student dedicated to understanding and securing the digital world. 
            My journey began with ethical hacking, and I've been fascinated by how proactive security measures 
            can protect organizations and individuals from ever-evolving cyber threats.
          </p>
          
          <div class="skills-showcase">
            <h3>Core Skills</h3>
            <div class="skill-tags">
              <span class="skill-tag">Penetration Testing</span>
              <span class="skill-tag">Network Analysis</span>
              <span class="skill-tag">Vulnerability Assessment</span>
              <span class="skill-tag">Linux Administration</span>
              <span class="skill-tag">Python Scripting</span>
              <span class="skill-tag">Wireshark</span>
              <span class="skill-tag">Metasploit</span>
              <span class="skill-tag">Nmap</span>
            </div>
          </div>
        </div>
        
        <div class="about-highlights">
          <div class="highlight-item">
            <div class="highlight-content">
              <h4>Ethical Hacking</h4>
              <p>Passionate about finding vulnerabilities before the bad guys do</p>
            </div>
          </div>
          
          <div class="highlight-item">
            <div class="highlight-content">
              <h4>Linux Enthusiast</h4>
              <p>Open-source advocate who believes in the power of community-driven security</p>
            </div>
          </div>
          
          <div class="highlight-item">
            <div class="highlight-content">
              <h4>Continuous Learning</h4>
              <p>Always exploring the latest cybersecurity tools and techniques</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </BaseCard>

  <BaseCard>
    <div class="github-section">
      <h2 class="section-title">GitHub Activity</h2>
      <div class="github-stats">
        <a href="https://git.io/streak-stats" target="_blank" rel="noopener noreferrer">
          <img src="https://streak-stats.demolab.com?user=CybrAvnish&theme=dark&hide_border=true" alt="GitHub Streak" />
        </a>
      </div>
    </div>
  </BaseCard>

  <BaseCard>
    <div class="cta-section">
      <h2 class="section-title">Let's Connect</h2>
      <p class="cta-text">
        Interested in cybersecurity, ethical hacking, or just want to chat about security? 
        I'm always open to collaboration and knowledge sharing!
      </p>
      <div class="cta-buttons">
        <a href="/project" class="cta-button primary">View My Projects</a>
        <a href="mailto:avnishsinghch@outlook.com" class="cta-button secondary">Get In Touch</a>
      </div>
    </div>
  </BaseCard>
</BaseLayout>

<style>
  .hero-section {
    padding: 4rem 0;
    text-align: center;
    position: relative;
  }

  .hero-content {
    max-width: 900px;
    margin: 0 auto;
  }

  .greeting {
    margin-bottom: 4rem;
  }

  .hero-title {
    font-size: 3.5rem;
    font-weight: 300;
    margin: 2rem 0;
    color: var(--retro-primary);
    font-family: 'Playfair Display', serif;
    line-height: 1.2;
    letter-spacing: -0.02em;
  }

  .hero-subtitle {
    font-size: 1.25rem;
    color: var(--retro-text-light);
    margin-bottom: 2rem;
    font-weight: 400;
    font-family: 'Inter', sans-serif;
    letter-spacing: 0.01em;
    line-height: 1.6;
  }

  .hero-stats {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
    gap: 2rem;
    margin-top: 4rem;
  }

  .stat-card {
    background: var(--retro-bg);
    border: 1px solid var(--retro-border);
    padding: 2rem 1.5rem;
    border-radius: 12px;
    text-align: center;
    transition: transform 0.2s ease, border-color 0.2s ease;
    will-change: transform;
  }

  .stat-card:hover {
    border-color: var(--retro-accent-green);
    transform: translateY(-2px);
  }

  .stat-number {
    font-size: 2.5rem;
    font-weight: 600;
    margin-bottom: 0.75rem;
    color: var(--retro-accent-green);
    font-family: 'Playfair Display', serif;
  }

  .stat-label {
    font-size: 0.875rem;
    color: var(--retro-text-light);
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .about-section {
    padding: 3rem 0;
  }

  .section-title {
    font-size: 2.75rem;
    font-weight: 300;
    text-align: center;
    margin-bottom: 3.5rem;
    color: var(--retro-primary);
    font-family: 'Playfair Display', serif;
    letter-spacing: -0.02em;
    position: relative;
  }

  .section-title::after {
    content: '';
    position: absolute;
    bottom: -1rem;
    left: 50%;
    transform: translateX(-50%);
    width: 60px;
    height: 2px;
    background: linear-gradient(90deg, var(--retro-accent-green), var(--retro-accent-gold));
  }

  .about-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: start;
  }

  @media (max-width: 1024px) {
    .about-grid {
      grid-template-columns: 1fr;
      gap: 3rem;
    }
  }

  .about-text {
    font-size: 1.125rem;
    line-height: 1.8;
    color: var(--retro-text);
    margin-bottom: 2.5rem;
    font-weight: 400;
  }

  .skills-showcase h3 {
    font-size: 1.5rem;
    margin-bottom: 1.5rem;
    color: var(--retro-accent-green);
    font-family: 'Playfair Display', serif;
    font-weight: 500;
  }

  .skill-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
  }

  .skill-tag {
    background: var(--retro-bg);
    color: var(--retro-accent-green);
    padding: 0.75rem 1.25rem;
    border-radius: 25px;
    font-size: 0.875rem;
    font-weight: 500;
    border: 1px solid var(--retro-border);
    transition: all 0.3s ease;
    cursor: default;
  }

  .skill-tag:hover {
    border-color: var(--retro-accent-green);
    background: var(--retro-accent-green);
    color: white;
  }

  .about-highlights {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .highlight-item {
    padding: 2rem;
    background: var(--retro-bg);
    border: 1px solid var(--retro-border);
    border-radius: 12px;
    transition: border-color 0.2s ease;
    border-left: 4px solid var(--retro-accent-gold);
  }

  .highlight-item:hover {
    border-color: var(--retro-accent-green);
    border-left-color: var(--retro-accent-green);
  }

  .highlight-content h4 {
    font-size: 1.25rem;
    margin-bottom: 0.75rem;
    color: var(--retro-accent-green);
    font-weight: 600;
    font-family: 'Playfair Display', serif;
  }

  .highlight-content p {
    color: var(--retro-text);
    line-height: 1.7;
    margin: 0;
    font-size: 0.95rem;
  }

  .github-section {
    padding: 3rem 0;
    text-align: center;
  }

  .github-stats {
    display: flex;
    justify-content: center;
    margin-top: 2.5rem;
  }

  .github-stats img {
    border-radius: 20px;
    box-shadow: 0 8px 30px rgba(0,0,0,0.15);
    transition: transform 0.3s ease;
  }

  .github-stats img:hover {
    transform: scale(1.02);
  }

  .cta-section {
    padding: 4rem 0;
    text-align: center;
    background: linear-gradient(135deg, var(--retro-bg), var(--retro-bg-alt));
    border-radius: 20px;
    margin: 2rem 0;
  }

  .cta-text {
    font-size: 1.25rem;
    color: var(--retro-text);
    margin-bottom: 2.5rem;
    max-width: 650px;
    margin-left: auto;
    margin-right: auto;
    line-height: 1.7;
  }

  .cta-buttons {
    display: flex;
    gap: 1.5rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .cta-button {
    padding: 1.25rem 2.5rem;
    border-radius: 50px;
    text-decoration: none;
    font-weight: 500;
    transition: all 0.3s ease;
    border: 1px solid transparent;
    font-size: 1rem;
    position: relative;
    overflow: hidden;
  }



  .cta-button.primary {
    background: var(--retro-accent-green);
    color: white;
    border-color: var(--retro-accent-green);
  }

  .cta-button.primary:hover {
    background: var(--retro-accent-burgundy);
    border-color: var(--retro-accent-burgundy);
  }

  .cta-button.secondary {
    background: transparent;
    color: var(--retro-accent-green);
    border-color: var(--retro-accent-green);
  }

  .cta-button.secondary:hover {
    background: var(--retro-accent-green);
    color: white;
  }

  @media (max-width: 768px) {
    .hero-title {
      font-size: 2.75rem;
    }
    
    .hero-stats {
      grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
      gap: 1.5rem;
    }
    
    .stat-card {
      padding: 1.5rem 1rem;
    }
    
    .cta-buttons {
      flex-direction: column;
      align-items: center;
    }
    
    .section-title {
      font-size: 2.25rem;
    }
    
    .about-text {
      font-size: 1rem;
    }
    
    .about-grid {
      gap: 2.5rem;
    }
    
    .highlight-item {
      padding: 1.5rem;
    }
  }

  /* Dark theme adjustments */
  html[data-theme="retro-dark"] .hero-title,
  html[data-theme="dracula"] .hero-title {
    background: linear-gradient(135deg, var(--retro-primary), var(--retro-accent-gold));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  html[data-theme="retro-dark"] .stat-card:hover,
  html[data-theme="dracula"] .stat-card:hover {
    box-shadow: 0 8px 30px rgba(197, 164, 109, 0.2);
  }
</style> 