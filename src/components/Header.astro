---
import Menu from "../components/HeaderMenu.astro";
import { SITE_TITLE } from "../consts";
---

<header class="header">
  <div class="header-container">
    <div class="header-start">
      <details class="dropdown" id="dropdown">
        <summary
          tabindex="0"
          role="button"
          class="dropdown-toggle"
          id="content"
          title="Content"
        >
          <svg
            class="menu-icon"
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 512 512"
            ><path
              d="M64,384H448V341.33H64Zm0-106.67H448V234.67H64ZM64,128v42.67H448V128Z"
            ></path></svg
        >
      </summary>
      <Menu />
    </details>
  </div>
  <div class="header-center">
    <a class="site-title" href="/">{SITE_TITLE}</a>
  </div>
  <div class="header-end">
    <!-- Theme toggle removed - now only in sidebar -->
  </div>
</header>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    // Menu functionality
    const dropdown = document.getElementById("dropdown") as HTMLElement;
    
    // Close menu when clicking outside
    document.addEventListener("click", function (event) {
      const isClickInside = dropdown.contains(event.target as Node);
      if (!isClickInside && dropdown.hasAttribute("open")) {
        dropdown.removeAttribute("open");
      }
    });

    // Close menu when touching outside
    document.addEventListener("touchmove", function (event) {
      const isTouchInside = dropdown.contains(event.target as Node);
      if (!isTouchInside && dropdown.hasAttribute("open")) {
        dropdown.removeAttribute("open");
      }
    });

    // Close menu when clicking menu items
    document.querySelectorAll("#dropdown > ul > li").forEach((item) => {
      item.addEventListener("click", function () {
        if (dropdown.hasAttribute("open")) {
          dropdown.removeAttribute("open");
        }
      });
    });
  });
</script>

<style>
  .header {
    background: var(--retro-bg);
    backdrop-filter: blur(10px);
    border-bottom: 1px solid var(--retro-border);
    position: sticky;
    top: 0;
    z-index: 50;
    padding: 1rem 0;
  }
  
  /* Hide header on desktop - only show on mobile/tablet */
  @media (min-width: 768px) {
    .header {
      display: none;
    }
  }
  
  .header-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  
  .header-start,
  .header-center,
  .header-end {
    display: flex;
    align-items: center;
  }
  
  .dropdown-toggle {
    background: transparent;
    border: none;
    cursor: pointer;
    padding: 0.75rem;
    border-radius: 0.5rem;
    transition: all 0.2s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    min-width: 44px;
    min-height: 44px;
  }
  
  .dropdown-toggle:hover {
    background: var(--retro-bg-alt);
  }
  
  .menu-icon {
    fill: var(--retro-text);
    transition: fill 0.2s ease;
    width: 24px;
    height: 24px;
  }
  
  .dropdown-toggle:hover .menu-icon {
    fill: var(--retro-accent-green);
  }
  
  .site-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--retro-primary);
    font-family: 'Playfair Display', serif;
    text-decoration: none;
    transition: color 0.2s ease;
    white-space: nowrap;
  }
  
  .site-title:hover {
    color: var(--retro-accent-green);
  }
  

  
  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }
  
  /* Mobile responsive design */
  @media (max-width: 768px) {
    .header {
      padding: 0.75rem 0;
    }
    
    .header-container {
      padding: 0 1rem;
      gap: 0.5rem;
    }
    
    .site-title {
      font-size: 1.25rem;
    }
    

    
    .menu-icon {
      width: 20px;
      height: 20px;
    }
  }
  
  /* Tablet responsive design */
  @media (min-width: 769px) and (max-width: 1024px) {
    .header-container {
      padding: 0 2rem;
    }
  }
  
  /* Desktop responsive design */
  @media (min-width: 1025px) {
    .header {
      padding: 1.25rem 0;
    }
    
    .header-container {
      padding: 0 2rem;
      gap: 2rem;
    }
    
    .site-title {
      font-size: 1.75rem;
    }
  }
</style>
