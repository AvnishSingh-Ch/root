---
import { Image } from "astro:assets";
const { title, image, desc, url, badge, target = "_blank" } = Astro.props;
---

<div class="premium-project-card">
  <div class="project-content">
    <div class="project-header">
      <a href={url} target={target} class="project-title-link">
        <h2 class="project-title">{title}</h2>
      </a>
      {badge && <span class="project-badge">{badge}</span>}
    </div>
    
    <div class="project-description">
      {desc}
    </div>
    
    <div class="project-stats">
      <div class="stat-item">
        <svg class="stat-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
          <path fill-rule="evenodd" clip-rule="evenodd" d="M12.026 2c-5.509 0-9.974 4.465-9.974 9.974 0 4.406 2.857 8.145 6.821 9.465.499.09.679-.217.679-.481 0-.237-.008-.865-.011-1.696-2.775.602-3.361-1.338-3.361-1.338-.452-1.152-1.107-1.459-1.107-1.459-.905-.619.069-.605.069-.605 1.002.07 1.527 1.028 1.527 1.028.89 1.524 2.336 1.084 2.902.829.091-.645.351-1.085.635-1.334-2.214-.251-4.542-1.107-4.542-4.93 0-1.087.389-1.979 1.024-2.675-.101-.253-.446-1.268.099-2.64 0 0 .837-.269 2.742 1.021a9.582 9.582 0 0 1 2.496-.336 9.554 9.554 0 0 1 2.496.336c1.906-1.291 2.742-1.021 2.742-1.021.545 1.372.203 2.387.099 2.64.64.696 1.024 1.587 1.024 2.675 0 3.833-2.33 4.675-4.552 4.922.355.308.675.916.675 1.846 0 1.334-.012 2.41-.012 2.737 0 .267.178.577.687.479C19.146 20.115 22 16.379 22 11.974 22 6.465 17.535 2 12.026 2z"/>
        </svg>
        <span class="stat-value loading-placeholder">
          <span class="loading-dot"></span>
        </span>
      </div>
      
      <div class="stat-item">
        <svg class="stat-icon" viewBox="-2 -6 24 24" xmlns="http://www.w3.org/2000/svg">
          <path d="M18 6c0-1.81-3.76-3.985-8.007-4C5.775 1.985 2 4.178 2 6c0 1.825 3.754 4.006 7.997 4C14.252 9.994 18 7.82 18 6zm-8 6c-5.042.007-10-2.686-10-6S4.984-.017 10 0c5.016.017 10 2.686 10 6s-4.958 5.993-10 6zm0-2a4 4 0 1 1 0-8 4 4 0 0 1 0 8zm0-2a2 2 0 1 0 0-4 2 2 0 0 0 0 4z"/>
        </svg>
        <span class="stat-value loading-placeholder">
          <span class="loading-dot"></span>
        </span>
      </div>
      
      <div class="stat-item">
        <svg class="stat-icon" viewBox="-4 -2 24 24" xmlns="http://www.w3.org/2000/svg">
          <path d="M8 18a1 1 0 1 0 0-2 1 1 0 0 0 0 2zm1.033-3.817A3.001 3.001 0 1 1 7 14.17v-1.047c0-.074.003-.148.008-.221a1 1 0 0 0-.462-.637L3.46 10.42A3 3 0 0 1 2 7.845V5.829a3.001 3.001 0 1 1 2 0v2.016a1 1 0 0 0 .487.858l3.086 1.846a3 3 0 0 1 .443.324 3 3 0 0 1 .444-.324l3.086-1.846a1 1 0 0 0 .487-.858V5.841A3.001 3.001 0 0 1 13 0a3 3 0 0 1 1.033 5.817v2.028a3 3 0 0 1-1.46 2.575l-3.086 1.846a1 1 0 0 0-.462.637c.005.073.008.147.008.22v1.06zM3 4a1 1 0 1 0 0-2 1 1 0 0 0 0 2zm10 0a1 1 0 1 0 0-2 1 1 0 0 0 0 2z"/>
        </svg>
        <span class="stat-value loading-placeholder">
          <span class="loading-dot"></span>
        </span>
      </div>
      
      <div class="stat-item">
        <svg class="stat-icon" viewBox="-2 -2.5 24 24" xmlns="http://www.w3.org/2000/svg">
          <path d="M10 13.554l3.517 1.85-.672-3.917 2.846-2.774-3.932-.571L10 4.579 8.241 8.142l-3.932.571 2.846 2.774-.672 3.916L10 13.554zm0 2.26L3.827 19.06l1.179-6.875L.01 7.317l6.902-1.003L10 .06l3.087 6.254 6.902 1.003-4.995 4.868 1.18 6.875L10 15.814z"/>
        </svg>
        <span class="stat-value loading-placeholder">
          <span class="loading-dot"></span>
        </span>
      </div>
    </div>
  </div>
  
  {image && (
    <div class="project-image">
      <a href={url} target={target} class="image-link">
        <Image
          src={image}
          alt={title}
          width="400"
          height="250"
          format="webp"
          loading="lazy"
          class="project-img"
        />
      </a>
    </div>
  )}
</div>

<style>
  .premium-project-card {
    background: var(--retro-bg);
    border: 1px solid var(--retro-border);
    border-radius: 16px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
    margin: 2rem 0;
    overflow: hidden;
    transition: transform 0.2s ease, border-color 0.2s ease;
    display: flex;
    flex-direction: column;
    will-change: transform;
  }
  
  .premium-project-card:hover {
    border-color: var(--retro-accent-green);
    transform: translateY(-2px);
  }
  
  .project-content {
    padding: 2.5rem;
    flex: 1;
  }
  
  .project-header {
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    margin-bottom: 1.5rem;
    gap: 1rem;
  }
  
  .project-title-link {
    text-decoration: none;
    flex: 1;
  }
  
  .project-title {
    font-size: 1.75rem;
    font-weight: 600;
    color: var(--retro-primary);
    font-family: 'Playfair Display', serif;
    margin: 0;
    line-height: 1.3;
    transition: color 0.3s ease;
  }
  
  .project-title-link:hover .project-title {
    color: var(--retro-accent-green);
  }
  
  .project-badge {
    background: var(--retro-accent-green);
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 20px;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    white-space: nowrap;
  }
  
  .project-description {
    color: var(--retro-text);
    font-size: 1rem;
    line-height: 1.7;
    margin-bottom: 2rem;
  }
  
  .project-stats {
    display: flex;
    gap: 1.5rem;
    align-items: center;
  }
  
  .stat-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--retro-text-light);
    font-size: 0.875rem;
  }
  
  .stat-icon {
    width: 18px;
    height: 18px;
    fill: currentColor;
    opacity: 0.7;
  }
  
  .stat-value {
    font-weight: 500;
  }
  
  .loading-placeholder {
    display: flex;
    align-items: center;
    gap: 0.25rem;
  }
  
  .loading-dot {
    width: 4px;
    height: 4px;
    background: var(--retro-text-light);
    border-radius: 50%;
    animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
  }
  
  @keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.5; }
  }
  
  .project-image {
    position: relative;
    overflow: hidden;
  }
  
  .image-link {
    display: block;
    position: relative;
  }
  
  .project-img {
    width: 100%;
    height: 250px;
    object-fit: cover;
  }
  
  /* Desktop layout */
  @media (min-width: 1024px) {
    .premium-project-card {
      flex-direction: row;
      align-items: stretch;
    }
    
    .project-content {
      flex: 1;
      display: flex;
      flex-direction: column;
      justify-content: space-between;
    }
    
    .project-image {
      width: 40%;
      min-height: 300px;
    }
    
    .project-img {
      height: 100%;
      min-height: 300px;
    }
  }
  
  /* Mobile adjustments */
  @media (max-width: 768px) {
    .premium-project-card {
      border-radius: 16px;
      margin: 2rem 0;
    }
    
    .project-content {
      padding: 2rem 1.5rem;
    }
    
    .project-header {
      flex-direction: column;
      align-items: flex-start;
      gap: 1rem;
    }
    
    .project-title {
      font-size: 1.5rem;
    }
    
    .project-stats {
      flex-wrap: wrap;
      gap: 1rem;
    }
    
    .project-img {
      height: 200px;
    }
  }
  
  /* Dark theme adjustments */
  html[data-theme="retro-dark"] .premium-project-card,
  html[data-theme="dracula"] .premium-project-card {
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
  }
  
  html[data-theme="retro-dark"] .premium-project-card:hover,
  html[data-theme="dracula"] .premium-project-card:hover {
    box-shadow: 0 8px 40px rgba(0, 0, 0, 0.4);
  }
  
  html[data-theme="retro-dark"] .project-badge,
  html[data-theme="dracula"] .project-badge {
    background: var(--retro-accent-gold);
    color: var(--retro-primary);
  }
</style>
